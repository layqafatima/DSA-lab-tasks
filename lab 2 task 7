#include <iostream>
using namespace std;
int main() {
    int departments;
    cout<<"Enter number of departments: ";
    cin>>departments;

    int** salaries=new int*[departments];
    int* empCount=new int[departments];
    for(int i=0;i<departments;i++){
        cout<<"Enter number of employees in department "<<i+1<<": ";
        cin>>empCount[i];
        salaries[i]=new int[empCount[i]];
        cout<<"Enter salaries:\n";
        for(int j=0;j<empCount[i];j++){
            cin>>salaries[i][j];
        }
    }
    cout<<"Highest salary in each department:";
    for(int i=0;i<departments;i++){
        int maxSal=salaries[i][0];
        for(int j=1;j<empCount[i];j++){
            if(salaries[i][j]>maxSal) maxSal=salaries[i][j];
        }
        cout<<"Department "<<i+1<<": "<<maxSal<<endl;
    }

    int deptIndex=0;
    double maxAvg=0;
    for(int i=0;i<departments;i++){
        int sum=0;
        for(int j=0;j<empCount[i];j++) sum+=salaries[i][j];
        double avg=(double)sum/empCount[i];
        if(avg>maxAvg){
            maxAvg=avg;
            deptIndex=i;
        }
    }
    cout<<"Department "<<deptIndex+1<<" has the maximum average salary: "<<maxAvg<<endl;
    for(int i=0;i<departments;i++) delete[] salaries[i];
    delete[] salaries;
    delete[] empCount;
}
