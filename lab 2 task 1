#include <iostream>
using namespace std;
int main() {
    int size;
    cout<<"Enter size of array: ";
    cin>>size;
    int* arr = new int[size];
    for(int i=0;i<size;i++)
        arr[i]=0;

    int pos,val;
    char choice='y';
    while(choice=='y'||choice=='Y'){
        cout<<"Enter position: ";
        cin>>pos;
        if(pos>=0 && pos<size){
            cout<<"Enter value: ";
            cin>>val;
            arr[pos]=val;
        } else {
            cout<<"Invalid position"<<endl;
        }
        cout<<"Do you want to update more? (y/n): ";
        cin>>choice;
    }

    cout<<"Final array: ";
    for(int i=0;i<size;i++)
        cout<<arr[i]<<" ";
    cout<<endl;
    delete[] arr;
}
