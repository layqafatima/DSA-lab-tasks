#include <iostream>
using namespace std;
int main(){
    int n,m;
    cout<<"Enter number of days:";
    cin>>n;
    cout<<"Enter number of readings per day:";
    cin>>m;
    double** temp=new double*[n];
    for(int i=0;i<n;i++)
        temp[i]=new double[m];

    for(int i=0;i<n;i++){
        cout<<"Enter temperatures for day "<<i+1<<":";
        for(int j=0;j<m;j++)
            cin>>temp[i][j];
    }
    double* dailyAvg=new double[n];
    for(int i=0;i<n;i++){
        double sum=0;
        for(int j=0;j<m;j++) sum+=temp[i][j];
        dailyAvg[i]=sum/m;
        cout<<"Average temperature for day "<<i+1<<":"<<dailyAvg[i]<<endl;
    }
    int hottestDay=0,coldestDay=0;
    for(int i=1;i<n;i++){
        if(dailyAvg[i]>dailyAvg[hottestDay]) hottestDay=i;
        if(dailyAvg[i]<dailyAvg[coldestDay]) coldestDay=i;
    }
    cout<<"Hottest day: Day "<<hottestDay+1<<" with average "<<dailyAvg[hottestDay]<<endl;
    cout<<"Coldest day: Day "<<coldestDay+1<<" with average "<<dailyAvg[coldestDay]<<endl;
    for(int i=0;i<n;i++) delete[] temp[i];
    delete[] temp;
    delete[] dailyAvg;
}
